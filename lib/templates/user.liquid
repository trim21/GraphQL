{% assign title = 'user' %}
{% layout 'layout' %}

{% block content %}
<div class='container mt-5'>
  <div class='container mt-5'>
    {{ user.username }} 已经登录
    <button class='btn btn-danger' onclick='logout()'>登出</button>
  </div>
  <script>
    async function logout() {
      await fetch('/p1/logout', { method: 'post' });
      location.reload();
    }
  </script>
</div>
{% endblock %}
